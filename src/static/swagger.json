  },
  "tags": [
    {
      "name": "Product",
      "description": "Ações possíveis para os produtos"
    },
    {
      "name": "User",
      "description": "Ações possíveis para os usuários"
    }
  ],
  "servers": [
    {
      "url": "https://rafael-compassmart.herokuapp.com/api/v1",
      "description": "Servidor de produção"
    }
  ],
  "paths": {
    "/product": {
      "security": {
        "bearerAuth": []
      },
      "post": {
        "tags": [
          "Product"
        ],
        "summary": "Criação de produtos",
        "description": "A inclusão retorna os dados cadastrados junto ao uuid do produto",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/product-request"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Inclusão realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/product-response"
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/bad_request_error"
                }
              }
            }
          },
          "500": {
            "description": "Erro ao realizar a solicitação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/internal_server_error"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Product"
        ],
        "summary": "Consulta de produtos",
        "description": "A consulta retorna uma lista de produtos",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "brand",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "department",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Consulta realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/product-response-paginate"
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/bad_request_error"
                }
              }
            }
          },
          "500": {
            "description": "Erro ao realizar a solicitação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/internal_server_error"
                }
              }
            }
          }
        }
      }
    },
    "/product/{id}": {
      "security": {
        "bearerAuth": []
      },
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "id do produto",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "tags": [
          "Product"
        ],
        "summary": "Consulta de produto por id",
        "description": "Retorna todos os dados de um produto específico",
        "responses": {
          "200": {
            "description": "Consulta realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/product-response"
                }
              }
            }
          },
          "400": {
            "description": "Id não é valido",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/bad_request_error"
                }
              }
            }
          },
          "404": {
            "description": "Produto não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          },
          "500": {
            "description": "Erro ao realizar a solicitação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/internal_server_error"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Product"
        ],
        "summary": "Atualização de um produto completo",
        "description": "Atualiza todos os registros de um produto",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/product-request"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Atualização realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/product-response"
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/bad_request_error"
                }
              }
            }
          },
          "401": {
            "description": "Não autorizado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          },
          "404": {
            "description": "Não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          },
          "500": {
            "description": "Erro ao realizar a solicitação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/internal_server_error"
                }
              }
            }
          }
        }
      },
      "patch": {
        "tags": [
          "Product"
        ],
        "summary": "Atualização de parte de um produto",
        "description": "Atualiza parte dos registros de um produto",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/product-request"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Atualização realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/product-response"
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/bad_request_error"
                }
              }
            }
          },
          "404": {
            "description": "Produto não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          },
          "500": {
            "description": "Erro ao realizar a solicitação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/internal_server_error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Product"
        ],
        "summary": "Remoção de um produto",
        "description": "Um produto é removido ao realizar a requisição",
        "responses": {
          "204": {
            "description": "Deleção realizada com sucesso"
          },
          "400": {
            "description": "Erro de validação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/bad_request_error"
                }
              }
            }
          },
          "404": {
            "description": "Produto não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          },
          "500": {
            "description": "Erro ao realizar a solicitação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/internal_server_error"
                }
              }
            }
          }
        }
      }
    },
    "/product/csv": {
      "security": {
        "bearerAuth": []
      },
      "post": {
        "tags": [
          "Product"
        ],
        "summary": "Criação de produtos a partir de um arquivo csv",
        "description": "A inclusão retorna os dados cadastrados junto ao uuid do produto",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/product-request"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Inclusão realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/product-response"
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/bad_request_error"
                }
              }
            }
          },
          "500": {
            "description": "Erro ao realizar a solicitação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/internal_server_error"
                }
              }
            }
          }
        }
      }
    },
    "/product/low_stock": {
      "security": {
        "bearerAuth": []
      },
      "get": {
        "tags": [
          "Product"
        ],
        "summary": "Consulta de produtos com baixo estoque",
        "description": "A consulta retorna uma lista de produtos com estoque menor que 100",
        "responses": {
          "200": {
            "description": "Consulta realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/product-response-paginate"
                }
              }
            }
          },
          "500": {
            "description": "Erro ao realizar a solicitação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/internal_server_error"
                }
              }
            }
          }
        }
      }
    },
    "/user": {
      "security": {
        "bearerAuth": []
      },
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Criação de usuários",
        "description": "A inclusão retorna os dados cadastrados junto ao uuid do usuário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/user-request"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Inclusão realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/user-response"
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/bad_request_error"
                }
              }
            }
          },
          "500": {
            "description": "Erro ao realizar a solicitação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/internal_server_error"
                }
              }
            }
          }
        }
      }
    },
    "/user": {
      "security": {
        "bearerAuth": []
      },
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Login de usuários",
        "description": "A inclusão retorna um token para ser utilizado nas demais requisições",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/user-request"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Inclusão realizada com sucesso",
            "content": {
              "application/json": {
                
              }
            }
          },
          "400": {
            "description": "Erro de validação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/bad_request_error"
                }
              }
            }
          },
          "500": {
            "description": "Erro ao realizar a solicitação",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/internal_server_error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "product-request": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "department": {
            "type": "string"
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "qtd_stock": {
            "type": "integer",
            "format": "int64"
          },
          "bar_codes": {
            "type": "string"
          }
        }
      },
      "product-response": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "department": {
            "type": "string"
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "qtd_stock": {
            "type": "integer",
            "format": "int64"
          },
          "bar_codes": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          }
        }
      },
      "product-response-paginate": {
        "type": "object",
        "properties": {
          "products": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/product-response"
            }
          },
          "total": {
            "type": "integer",
            "format": "int64"
          },
          "limit": {
            "type": "integer",
            "format": "int64"
          },
          "page": {
            "type": "integer",
            "format": "int64"
          },
          "totalPages": {
            "type": "number",
            "format": "int64"
          }
        }
      },
      "user-request": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "user-response": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          }
        }
      },
      "error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "http_response": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string"
              },
              "code": {
                "type": "number",
                "format": "int64"
              }
            }
          }
        }
      },
      "bad_request_error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "http_response": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string",
                "default": "Invalid syntax for this request was provided."
              },
              "code": {
                "type": "number",
                "format": "int64",
                "default": 400
              }
            }
          }
        }
      },
      "not_found_error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "http_response": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string",
                "default": "We could not find the resource you requested. Please refer to the documentation for the list of resources."
              },
              "code": {
                "type": "number",
                "format": "int64",
                "default": 404
              }
            }
          }
        }
      },
      "unauthorized_error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "http_response": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string",
                "default": "You are unauthorized to access the requested resource. Please log in."
              },
              "code": {
                "type": "number",
                "format": "int64",
                "default": 401
              }
            }
          }
        }
      },
      "internal_server_error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "description": {
            "type": "string",
            "default": "Some internal error occurred"
          },
          "http_response": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string",
                "default": "Unexpected internal server error."
              },
              "code": {
                "type": "number",
                "format": "int64",
                "default": 500
              }
            }
          }
        }
      }
    }
  }
}