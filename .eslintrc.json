{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": "standard-with-typescript",
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "indent": ["error", 2],
      "quotes": ["error", "single"],
      "semi": "error",
      "no-unused-vars": ["error", { "args": "all" }],
      "no-console": "off",
      "curly": ["multi", "error"],
      "eqeqeq": "error",
      "no-throw-literal": "error",
      "strict": "error",
      "no-var": "error",
      "dot-notation": "error",
      "no-tabs": "error",
      "no-trailing-spaces": "error",
      "no-use-before-define": "error",
      "no-useless-call": "error",
      "no-with": "error",
      "operator-linebreak": "error",
      "yoda": "error",
      "quote-props": ["error", "as-needed"]
    }
}
